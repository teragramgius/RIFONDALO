{
  "name": "personal-portfolio-napoli-sand",
  "version": "1.0.0",
  "description": "Portfolio professionale dual-purpose con design ispirato alla maglietta Napoli Sand 2025/2026",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && python quick_server.py",
    "build": "cd frontend && pnpm run build",
    "build:frontend": "cd frontend && pnpm run build",
    "start": "cd backend && python quick_server.py",
    "install:all": "cd frontend && pnpm install && cd ../backend && pip install -r requirements.txt",
    "clean": "rm -rf frontend/dist frontend/node_modules backend/__pycache__"
  },
  "keywords": [
    "portfolio",
    "react",
    "flask",
    "d3js",
    "napoli",
    "sand",
    "project-management",
    "ux-design",
    "network-visualization"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/personal-portfolio-napoli-sand.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/personal-portfolio-napoli-sand/issues"
  },
  "homepage": "https://yourusername.github.io/personal-portfolio-napoli-sand"
}
